doctype html
extends layout

block body
    body(ng-controller='AppCtrl', data-ng-cloak)
        #cover(data-ng-hide="appInitialized", data-ng-animate="{ hide: 'fade-hide' }")
        //.navbar.navbar-inner.navbar-fixed-top

        style(type="text/css").
            .navbar-inverse { background-color: #0707DE}
            .navbar-inverse .navbar-nav>.active>a:hover,.navbar-inverse .navbar-nav>li>a:hover, .navbar-inverse .navbar-nav>li>a:focus { background-color: #4DACFF}
            .navbar-inverse .navbar-nav>.active>a,.navbar-inverse .navbar-nav>.open>a,.navbar-inverse .navbar-nav>.open>a, .navbar-inverse .navbar-nav>.open>a:hover,.navbar-inverse .navbar-nav>.open>a, .navbar-inverse .navbar-nav>.open>a:hover, .navbar-inverse .navbar-nav>.open>a:focus { background-color: #0707DE}
            .dropdown-menu { background-color: #99FF5E}
            .dropdown-menu>li>a:hover, .dropdown-menu>li>a:focus { background-color: #428BCA}
            .navbar-inverse { border-color: #FA053E}
            .navbar-inverse .navbar-brand { color: #999999}
            .navbar-inverse .navbar-brand:hover { color: #FF9D2E}
            .navbar-inverse .navbar-nav>li>a { color: #D4C8BE}
            .navbar-inverse .navbar-nav>li>a:hover, .navbar-inverse .navbar-nav>li>a:focus { color: #3BFF0A}
            .navbar-inverse .navbar-nav>.active>a,.navbar-inverse .navbar-nav>.open>a, .navbar-inverse .navbar-nav>.open>a:hover, .navbar-inverse .navbar-nav>.open>a:focus { color: #12FF39}
            .navbar-inverse .navbar-nav>.active>a:hover, .navbar-inverse .navbar-nav>.active>a:focus { color: #CF0DFF}
            .dropdown-menu>li>a { color: #333333}
            .dropdown-menu>li>a:hover, .dropdown-menu>li>a:focus { color: #DE91FF}
            .navbar-inverse .navbar-nav>.dropdown>a .caret { border-top-color: #999999}
            .navbar-inverse .navbar-nav>.dropdown>a:hover .caret { border-top-color: #FFFFFF}
            .navbar-inverse .navbar-nav>.dropdown>a .caret { border-bottom-color: #999999}
            .navbar-inverse .navbar-nav>.dropdown>a:hover .caret { border-bottom-color: #FFFFFF}


        //<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
        //header.navbar.navbar-inverse.navbar-fixed-top.bs-docs-nav(role='banner')
        header.navbar.navbar-inverse.navbar-fixed-top.bs-docs-nav(role='banner')
            //.navbar.navbar-default.navbar-fixed-top
            //.navbar.navbar-default.navbar-fixed-top( role='navigation')
            .container
                .pull-left
                .navbar-header
                    button.navbar-toggle(type='button')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    //a.navbar-brand(href='/')
                        strong We:
                        | Social
                    a.navbar-brand
                      img.logo(src="/linker/images/people.png")
                .navbar-collapse.collapse
                    ul.nav.navbar-nav

                        li(data-access-level='{{ accessLevels.anon }}', active-nav)
                            a(href='/login') Log in

                        li(data-access-level='{{ accessLevels.anon }}', active-nav)
                            a(href='/foodview') FoodView
                        li(data-access-level='{{ accessLevels.user }}', active-nav)
                            a(href='/vendor') VendorView
                        li(data-access-level='{{ accessLevels.user }}', active-nav)
                            a(href='/event') Events
                        //li(data-access-level='{{ accessLevels.user }}', active-nav)
                            a(href='/po') PoView
                        li(data-access-level='{{ accessLevels.anon }}', active-nav)
                            a(href='/home') Home
                        li(data-access-level='{{ accessLevels.admin }}', active-nav)
                            a(href='/user') Users
                        li(data-access-level='{{ accessLevels.user }}', active-nav)
                            a(href='/daily') Daily Time Sheet
                        li(data-access-level='{{ accessLevels.user }}', active-nav)
                            a(href="/logout")   Log out
                            //li.
                            //  a(href='#') News
                            //li.
                            //  a(href='/activity') Activity
                            //li.
                            //  a(href='/users') Users

                    div#userInfo.pull-right(data-access-level='{{ accessLevels.user }}')
                        | Welcome&nbsp;
                        strong {{ user.username }}&nbsp;

                        span.label(data-ng-class='{"label-info": user.role == userRoles.user, "label-success": user.role == userRoles.admin}') {{ getUserRoleText(user.role) }}
        .container
          div(ng-view='ng-view')
          .alert.alert-error(ng-bind="error", data-ng-show="error")